{
  "name": "ROS2 Development Container",
  "image": "spin42/ovcs-ros2-ubnutu-24-04",
  "workspaceFolder": "/opt/ros2_ws/src/ovcs_ros2",
  "workspaceMount": "source=${localWorkspaceFolder},target=/opt/ros2_ws/src/ovcs_ros2,type=bind,consistency=cached",
  "mounts": [{ "source": "/run/udev", "target": "/run/udev", "type": "bind" }],
  "overrideCommand": false,
  "privileged": true,
  "runArgs": ["--network=host"]
}
